@model List<Model.EF.ProductCategory>


<ul id="accordionSidebar">
    @foreach (var item in Model.Where(x => x.ParentID == null))
    {
        var child = Model.Where(x => x.ParentID == item.ID);
        var addParentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";

        <li class="dropdown">
            <a title="@item.Name" href="/san-pham/@item.MetaTitle-@item.ID" @addParentClass>@item.Name</a>
            @if (child.Count() > 0)
            {
                <ul class="dropdown-menu">
                    @foreach (var childItem in child)
                    {
                        <li><a title="@childItem.Name" href="/san-pham/@childItem.MetaTitle-@childItem.ID">@childItem.Name</a></li>

                    }
                </ul>

            }
        </li>
    }


</ul>
